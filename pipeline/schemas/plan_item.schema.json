{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan Item",
  "type": "object",
  "properties": {
    "day": {"type": "integer", "minimum": 1, "maximum": 14},
    "meal": {"type": "string", "enum": ["breakfast", "mid_morning", "lunch", "evening", "dinner", "snack"]},
    "time": {"type": "string", "description": "HH:MM or textual window"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "quantity": {"type": "string", "description": "original units (e.g., 1 cup, 2 tbsp)"},
          "notes": {"type": "string"}
        },
        "required": ["name"],
        "additionalProperties": false
      }
    }
  },
  "required": ["day", "meal", "items"],
  "additionalProperties": false
}